<html>
<head>
    <{{>includeHead}}
</head>
<body>
  {{>includeMenu}}
  <BR><BR><BR>
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4 panel panel-default">
        <h4 align="center" class="margin-base-vertical">Welcome to the News Post</h4>
        <p class="help-block text-center">Breaking News</p>
  
        <ul id="news"></ul>
        <script src="/socket.io/socket.io.js"></script>
        <script src="http://code.jquery.com/jquery-1.11.1.js"></script>
        <script>
          var socket = io();
          socket.on('news-article', function(article){
            $('#news').append($('<li>').text(article));
          });
        </script>
        </div>
    </div>
  </div>

    {{>includeFoot}}
  </body>
</html>