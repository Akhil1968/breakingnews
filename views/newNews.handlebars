<html>
<head>
    <{{>includeHead}}
</head>
<body>
  {{>includeMenu}}
  <BR><BR><BR>
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4 panel panel-default">
        <h1 align="center" class="margin-base-vertical">Welcome to the News Post</h1>
        <p class="help-block text-center">
            <medium>Hi {{userName}}! You can post breaking news items here</medium>
        </p>
        <form class="margin-base-vertical" method="post" action="/broadcast"><!--FORM starts -->
          <p class="input-group ">
            <span class="input-group-addon"><span class="icon-user"></span></span>
            <input type="text" required class="form-control input-lg" name="title" 
            placeholder="News title" />
            <input type="text" required class="form-control input-lg" name="article" placeholder="News Details" />
          </p>
          <p class="text-center">
            <button type="submit" class="btn btn-success btn-lg">Post News</button>
          </p>
        </form>
      </div>
    </div>
  </div>

    {{>includeFoot}}
  </body>
</html> 


